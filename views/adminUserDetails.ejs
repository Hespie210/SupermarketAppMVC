<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/theme.css">
  <title>User Details</title>
</head>
<body>
  <%- include('partials/header') %>

  <div class="container mt-4">
    <!-- Header + actions -->
    <div class="d-flex justify-content-between align-items-center mb-3">
      <div>
        <h2 class="mb-1">User Details</h2>
        <p class="text-muted mb-0">ID: <%= viewedUser.id %></p>
      </div>
      <div class="d-flex gap-2">
        <a href="/admin/users/<%= viewedUser.id %>/edit" class="btn btn-outline-primary btn-sm">Edit</a>
        <a href="/admin/users" class="btn btn-secondary btn-sm">Back</a>
      </div>
    </div>

    <!-- User detail card -->
    <div class="section-card p-3">
      <div class="d-flex align-items-center gap-3 flex-wrap mb-3">
        <% if (viewedUser.profileImage) { %>
          <img src="/profile/<%= viewedUser.profileImage %>" alt="Profile"
               class="rounded-circle"
               style="width:64px;height:64px;object-fit:cover;">
        <% } else { %>
          <div class="rounded-circle bg-light text-muted d-flex align-items-center justify-content-center"
               style="width:64px;height:64px;">
            N/A
          </div>
        <% } %>
        <div>
          <div class="fw-semibold fs-5"><%= viewedUser.username %></div>
          <span class="badge <%= viewedUser.role === 'admin' ? 'bg-primary' : 'bg-secondary' %> text-uppercase"><%= viewedUser.role %></span>
        </div>
      </div>

      <div class="row g-3">
        <div class="col-md-6">
          <div class="text-muted small">Email</div>
          <div class="fw-semibold"><%= viewedUser.email %></div>
        </div>
        <div class="col-md-6">
          <div class="text-muted small">Contact</div>
          <div class="fw-semibold"><%= viewedUser.contact %></div>
        </div>
        <div class="col-md-6">
          <div class="text-muted small">Address</div>
          <div class="fw-semibold"><%= viewedUser.address %></div>
        </div>
        <div class="col-md-6">
          <div class="text-muted small">Store Credit</div>
          <div class="fw-semibold">$<%= Number(storeCredit || 0).toFixed(2) %></div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
