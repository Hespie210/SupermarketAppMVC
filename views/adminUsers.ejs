<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/theme.css">
  <title>Admin - Users</title>
</head>
<body>
  <%- include('partials/header') %>

  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2 class="mb-0">User Management</h2>
      <a href="/admin/users/create" class="btn btn-primary btn-sm">Create User</a>
    </div>

    <table class="table table-striped table-hover align-middle">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Profile</th>
          <th>Username</th>
          <th>Email</th>
          <th>Role</th>
          <th>Contact</th>
          <th>Address</th>
          <th class="text-center" style="width: 180px;">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(function(u) { %>
          <tr>
            <td><%= u.id %></td>
            <td>
              <% if (u.profileImage) { %>
                <img src="/profile/<%= u.profileImage %>" alt="Profile"
                     class="rounded-circle"
                     style="width:32px;height:32px;object-fit:cover;">
              <% } %>
            </td>
            <td><%= u.username %></td>
            <td><%= u.email %></td>
            <td>
              <span class="badge <%= u.role === 'admin' ? 'bg-primary' : 'bg-secondary' %> text-uppercase"><%= u.role %></span>
            </td>
            <td><%= u.contact %></td>
            <td><%= u.address %></td>
            <td>
              <div class="d-flex gap-2 justify-content-center flex-wrap">
                <a href="/admin/users/<%= u.id %>/edit" class="btn btn-sm btn-outline-primary">Edit</a>
                <% if (u.role !== 'admin') { %>
                  <form action="/admin/users/delete/<%= u.id %>" method="POST"
                        onsubmit="return confirm('Delete this user?');">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                  </form>
                <% } else { %>
                  <span class="text-muted">Admin</span>
                <% } %>
              </div>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>
