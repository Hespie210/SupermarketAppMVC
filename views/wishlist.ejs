<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>My Wishlist</title>
</head>
<body>
  <%- include('partials/header') %>

  <div class="container mt-4">
    <h2 class="mb-3">My Wishlist</h2>

    <% if (products.length === 0) { %>
      <p>You don't have any items in your wishlist yet.</p>
      <a href="/shopping" class="btn btn-primary">Back to Shop</a>
    <% } else { %>
      <div class="row g-4">
        <% products.forEach(function(product) { %>
          <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="card h-100">
              <img src="/images/<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text small"><%= product.description %></p>
                <p class="fw-bold mb-1">$<%= product.price.toFixed(2) %></p>

                <form action="/add-to-cart/<%= product.id %>" method="POST" class="mt-auto">
                  <input type="hidden" name="quantity" value="1">
                  <button type="submit" class="btn btn-primary btn-sm w-100 mb-2">
                    Move to Cart
                  </button>
                </form>

                <form action="/wishlist/remove/<%= product.id %>" method="POST">
                  <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                    Remove
                  </button>
                </form>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>
</body>
</html>
