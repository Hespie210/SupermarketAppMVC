<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
</head>
<body>
  <%- include('partials/header') %>

  <div class="container mt-3">
    <p>Welcome, <%= user.username %> (<%= user.role %>)</p>

    <div class="text-center">
      <h2>Products from Supermarket</h2>
    </div>

    <br>

    <table class="table table-hover small text-center">
      <thead>
        <tr>
          <th width="100">Product Name</th>
          <th width="100">Product Image</th>
          <th width="50">Available Qty</th>
          <th width="50">Price</th>
          <th width="120">Buy</th>
        </tr>
      </thead>
      <tbody>
        <% for (let i = 0; i < products.length; i++) { %>
          <tr>
            <!-- Product name links to details page -->
            <td>
              <a href="/product/<%= products[i].id %>">
                <%= products[i].productName %>
              </a>
            </td>

            <!-- Product image -->
            <td>
              <img src="images/<%= products[i].image %>" width="20%">
            </td>

            <!-- Available quantity -->
            <td><%= products[i].quantity %></td>

            <!-- Price formatted to 2 decimal places -->
            <td>$<%= Number(products[i].price).toFixed(2) %></td>

            <!-- Buy form -->
            <td>
              <% if (products[i].quantity > 0) { %>
                <form action="/add-to-cart/<%= products[i].id %>" method="POST" class="d-flex">
                  <input
                    type="number"
                    name="quantity"
                    class="form-control"
                    min="1"
                    max="<%= products[i].quantity %>"
                    value="1"
                    required
                  >
                  <button type="submit" class="btn btn-primary ms-2">Buy</button>
                </form>
              <% } else { %>
                <span class="text-danger fw-bold">Out of stock</span>
              <% } %>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>