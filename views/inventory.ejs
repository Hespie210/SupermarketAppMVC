<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App - Inventory</title>

  <style>
    .highlight {
      background-color: yellow;
      border-radius: 4px;
      padding: 2px 4px;
    }
  </style>
</head>
<body>
  <%- include('partials/header') %>

  <div class="container">
    <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
    <br>
    <div class="text-center">
      <h2>Products from Supermarket App Database</h2>
    </div>
    <br>

    <!-- ðŸ” Search bar for inventory -->
    <div class="row mb-3">
      <div class="col-md-6">
        <input
          type="text"
          id="inventorySearchInput"
          class="form-control"
          placeholder="Search products in inventory..."
        >
      </div>
    </div>

    <table class="table table-hover small text-center">
      <thead>
        <tr>
          <th width="150">Product Name</th>
          <th width="150">Product Image</th>
          <th width="80">Quantity</th>
          <th width="80">Price</th>
          <th width="80">Edit</th>
          <th width="80">Delete</th>
        </tr>
      </thead>
      <tbody id="inventoryTableBody">
        <% for (let i = 0; i < products.length; i++) { %>
          <tr class="product-row">
            <td>
              <a href="/product/<%= products[i].id %>">
                <span class="product-name"><%= products[i].name %></span>
              </a>
            </td>
            <td>
              <img src="images/<%= products[i].image %>" width="20%">
            </td>
            <td><%= products[i].quantity %></td>
            <td>$<%= products[i].price.toFixed(2) %></td>
            <!-- Edit Link -->
            <td>
              <a href="/updateProduct/<%= products[i].id %>">Edit</a>
            </td>
            <!-- Delete Link -->
            <td>
              <a
                href="/deleteProduct/<%= products[i].id %>"
                onclick="return confirm('Are you sure you want to delete this product?')"
              >
                Delete
              </a>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <!-- ðŸ” Client-side search/filter for inventory -->
  <script>
    const inventorySearchInput = document.getElementById('inventorySearchInput');
    const inventoryRows = document.querySelectorAll('#inventoryTableBody .product-row');

    inventorySearchInput.addEventListener('keyup', () => {
      const term = inventorySearchInput.value.toLowerCase();

      inventoryRows.forEach(row => {
        const nameElem = row.querySelector('.product-name');
        const originalText = nameElem.textContent;
        const productName = originalText.toLowerCase();

        // Reset highlight each time
        nameElem.textContent = originalText;

        if (term === '') {
          row.style.display = '';
        } else if (productName.includes(term)) {
          row.style.display = '';

          // Highlight match in product name
          const regex = new RegExp(`(${term})`, 'gi');
          nameElem.innerHTML = originalText.replace(regex, "<span class='highlight'>$1</span>");
        } else {
          row.style.display = 'none';
        }
      });
    });
  </script>
</body>
</html>
