<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Inventory - Hespie Supermarket</title>

  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/theme.css">
  <style>
    .product-card-img {
      height: 170px;
      object-fit: contain;
      padding: 1rem;
    }
  </style>
</head>
<body>
  <%- include('partials/header') %>

  <div class="container py-4">

    <div class="page-hero">
      <div class="d-flex flex-wrap justify-content-between align-items-center">
        <div>
          <h2 class="page-title">Inventory</h2>
          <p class="page-subtitle mb-0">Oversee stock, prices, and visuals for every product.</p>
        </div>
        <div class="floating-actions">
          <a class="btn btn-primary" href="/addProduct">+ Add Product</a>
        </div>
      </div>

      <form class="search-wrapper mt-3" method="get" action="/inventory">
        <div class="input-group">
          <span class="input-group-text">Search</span>
          <input
            type="text"
            class="form-control"
            placeholder="Product name..."
            name="search"
            value="<%= typeof search !== 'undefined' ? search : '' %>">
          <button class="btn btn-primary" type="submit">Go</button>
        </div>
      </form>
    </div>

    <% if (!products || products.length === 0) { %>
      <div class="empty-state">
        <p class="mb-1">No products found in the inventory.</p>
        <a class="btn btn-primary mt-2" href="/addProduct">Add your first product</a>
      </div>
    <% } else { %>

      <!-- Card grid -->
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 g-4">
        <% products.forEach(function(product) { %>
          <div class="col">
            <div class="card h-100 shadow-sm">
              <% if (product.image) { %>
                <img src="/images/<%= product.image %>" 
                    alt="<%= product.productName || product.name %>" 
                    class="card-img-top product-card-img">
              <% } else { %>
                <div class="product-card-img d-flex align-items-center justify-content-center">
                  <span class="text-muted">No image</span>
                </div>
              <% } %>

              <div class="card-body d-flex flex-column">
                <div class="d-flex justify-content-between align-items-start">
                  <h5 class="card-title mb-0"><%= product.productName || product.name %></h5>
                  <span class="badge <%= product.quantity > 0 ? 'badge-accent' : 'badge-danger' %>">
                    <%= product.quantity > 0 ? 'In Stock' : 'Out' %>
                  </span>
                </div>

                <p class="card-text mb-1 mt-2">
                  <span class="muted-underline">Price</span><br>
                  <span class="fs-5 fw-bold">$<%= Number(product.price).toFixed(2) %></span>
                </p>

                <p class="card-text mb-3 text-muted">
                  Quantity in stock: <%= product.quantity %>
                </p>

                <form action="/inventory/<%= product.id %>/quantity" method="POST" class="d-flex gap-2 mb-3">
                  <input type="number" name="quantity" class="form-control form-control-sm" min="0"
                         value="<%= product.quantity %>" aria-label="Update quantity for <%= product.productName || product.name %>">
                  <button type="submit" class="btn btn-sm btn-secondary">Update Qty</button>
                </form>

                <!-- Buttons at the bottom of the card -->
                <div class="mt-auto d-flex justify-content-between">
                  <a href="/updateProduct/<%= product.id %>" class="btn btn-outline-primary btn-sm">Edit</a>
                  <a href="/deleteProduct/<%= product.id %>" class="btn btn-outline-danger btn-sm"
                     onclick="return confirm('Are you sure you want to delete this product?');">
                    Delete
                  </a>
                </div>
              </div>

            </div>
          </div>
        <% }); %>
      </div>

    <% } %>

  </div>
</body>
</html>
