<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Purchases</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/theme.css">
</head>
<body>
  <%- include('partials/header') %>

  <div class="container mt-4">
    <h2>My Purchases</h2>
    <hr>

    <% if (!purchases || purchases.length === 0) { %>
      <!-- Empty purchases state -->
      <p>You have not bought anything yet.</p>
      <a href="/shopping" class="btn btn-primary">Go Shopping</a>
    <% } else { %>

      <!-- Purchase summary table -->
      <table class="table table-bordered text-center align-middle" style="width: 95%; margin: auto;">
        <thead class="table-light">
          <tr>
            <th style="width: 15%;">Order #</th>
            <th style="width: 15%;">Payment</th>
            <th style="width: 15%;">Status</th>
            <th style="width: 15%;">Total Items</th>
            <th style="width: 15%;">Total Amount</th>
            <th style="width: 20%;">Date/Time</th>
            <th style="width: 10%;"></th>
          </tr>
        </thead>

        <tbody>
          <% purchases.forEach(function(p) { %>
            <tr>
              <td><span class="muted-underline">#<%= p.orderNumber || p.id %></span></td>
              <td>
                <%
                  const rawPayment = p.paymentMethod || '';
                  const paymentKey = rawPayment.toLowerCase();
                  let paymentLabel = 'N/A';
                  let paymentBadgeClass = 'bg-secondary';
                  if (paymentKey.includes('paypal')) {
                    paymentLabel = 'PayPal';
                    paymentBadgeClass = 'bg-primary';
                  } else if (paymentKey.includes('stripe')) {
                    paymentLabel = 'Stripe';
                    paymentBadgeClass = 'bg-dark';
                  } else if (paymentKey.includes('nets')) {
                    paymentLabel = 'NETS QR';
                    paymentBadgeClass = 'bg-info text-dark';
                  } else if (paymentKey.includes('store credit')) {
                    paymentLabel = 'Store Credit';
                    paymentBadgeClass = 'bg-secondary';
                  } else if (paymentKey.includes('cash')) {
                    paymentLabel = 'COD';
                    paymentBadgeClass = 'bg-secondary';
                  } else if (rawPayment) {
                    paymentLabel = rawPayment;
                  }
                %>
                <span class="badge <%= paymentBadgeClass %>"><%= paymentLabel %></span>
              </td>
              <td>
                <%
                  const statusClassMap = {
                    'Processing': 'bg-warning text-dark',
                    'Packing': 'bg-info text-dark',
                    'Ready for Pickup': 'bg-primary',
                    'Out for Delivery': 'bg-info text-dark',
                    'Completed': 'bg-success',
                    'Cancelled': 'bg-secondary',
                    'Failed Payment': 'bg-danger',
                    'Refund Requested': 'bg-warning text-dark',
                    'Refund Rejected': 'bg-secondary',
                    'Refunded': 'bg-dark'
                  };
                  const statusBadgeClass = statusClassMap[p.status || 'Processing'] || 'bg-secondary';
                %>
                <span class="badge <%= statusBadgeClass %>">
                  <%= p.status || 'Processing' %>
                </span>
              </td>
              <td><%= p.totalQuantity %></td>
              <td>$<%= Number(p.totalAmount).toFixed(2) %></td>
              <td>
                <%= p.createdAt && p.createdAt.toLocaleString
                      ? p.createdAt.toLocaleString()
                      : p.createdAt %>
              </td>
              <td>
                <a class="btn btn-sm btn-outline-primary" href="/my-purchases/<%= p.orderNumber || p.id %>">View</a>
                <% const paymentMethod = (p.paymentMethod || '').toLowerCase(); %>
                <% const isPaypal = paymentMethod.includes('paypal'); %>
                <% const isStripe = paymentMethod.includes('stripe'); %>
                <% const isNets = paymentMethod.includes('nets'); %>
                <% const isStoreCredit = paymentMethod.includes('store credit'); %>
                <% const canRefund = (isPaypal || isStripe || isNets || isStoreCredit) && !['Refunded', 'Refund Requested'].includes(p.status || ''); %>
                <% if (user && user.role === 'user' && canRefund) { %>
                  <button
                    class="btn btn-sm btn-outline-danger ms-2 refund-btn"
                    data-order-id="<%= p.orderNumber || p.id %>">
                    Request Refund
                  </button>
                <% } %>
              </td>
            </tr>
          <% }); %>
        </tbody>

      </table>

    <% } %>

  </div>
  <!-- Refund request handler -->
  <script>
    (function () {
      const buttons = Array.from(document.querySelectorAll('.refund-btn'));
      if (!buttons.length) return;

      buttons.forEach(btn => {
        btn.addEventListener('click', () => {
          const orderId = btn.dataset.orderId;
          btn.disabled = true;
          fetch(`/my-purchases/${orderId}/refund-request`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' }
          })
          .then(res => res.json())
          .then(data => {
            if (data && data.success) {
              window.location.reload();
              return;
            }
            throw new Error(data && data.error ? data.error : 'Unable to request refund.');
          })
          .catch(err => {
            alert(err.message || 'Unable to request refund.');
          })
          .finally(() => {
            btn.disabled = false;
          });
        });
      });
    })();
  </script>
</body>
</html>
