<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Purchases</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/theme.css">
</head>
<body>
  <%- include('partials/header') %>

  <div class="container mt-4">
    <h2>My Purchases</h2>
    <hr>

    <% if (!purchases || purchases.length === 0) { %>
      <p>You have not bought anything yet.</p>
      <a href="/shopping" class="btn btn-primary">Go Shopping</a>
    <% } else { %>

      <table class="table table-bordered text-center align-middle" style="width: 95%; margin: auto;">
        <thead class="table-light">
          <tr>
            <th style="width: 15%;">Order #</th>
            <th style="width: 15%;">Payment</th>
            <th style="width: 15%;">Status</th>
            <th style="width: 15%;">Total Items</th>
            <th style="width: 15%;">Total Amount</th>
            <th style="width: 20%;">Date/Time</th>
            <th style="width: 10%;"></th>
          </tr>
        </thead>

        <tbody>
          <% purchases.forEach(function(p) { %>
            <tr>
              <td><span class="muted-underline">#<%= p.orderNumber || p.id %></span></td>
              <td><%= p.paymentMethod || 'N/A' %></td>
              <td>
                <span class="badge <%= p.status === 'Completed' ? 'bg-success' : p.status === 'Processing' ? 'bg-warning text-dark' : 'bg-secondary' %>">
                  <%= p.status || 'Processing' %>
                </span>
              </td>
              <td><%= p.totalQuantity %></td>
              <td>$<%= Number(p.totalAmount).toFixed(2) %></td>
              <td>
                <%= p.createdAt && p.createdAt.toLocaleString
                      ? p.createdAt.toLocaleString()
                      : p.createdAt %>
              </td>
              <td>
                <a class="btn btn-sm btn-outline-primary" href="/my-purchases/<%= p.orderNumber || p.id %>">View</a>
              </td>
            </tr>
          <% }); %>
        </tbody>

      </table>

    <% } %>

  </div>
</body>
</html>
