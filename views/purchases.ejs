<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Purchases</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/theme.css">
</head>
<body>
  <%- include('partials/header') %>

  <div class="container mt-4">
    <h2>My Purchases</h2>
    <hr>

    <% if (!purchases || purchases.length === 0) { %>
      <p>You have not bought anything yet.</p>
      <a href="/shopping" class="btn btn-primary">Go Shopping</a>
    <% } else { %>

      <table class="table table-bordered text-center align-middle" style="width: 90%; margin: auto;">
        <thead class="table-light">
          <tr>
            <th style="width: 25%;">Date/Time</th>
            <th style="width: 15%;">Order #</th>
            <th style="width: 20%;">Payment</th>
            <th style="width: 20%;">Total Items</th>
            <th style="width: 20%;">Total Amount</th>
          </tr>
        </thead>

        <tbody>
          <% purchases.forEach(function(p) { %>
            <tr>
              <td class="text-start">
                <a href="/my-purchases/<%= p.receiptTimestamp %>" class="text-decoration-none">
                  <%= p.createdAt && p.createdAt.toLocaleString
                        ? p.createdAt.toLocaleString()
                        : p.createdAt %>
                </a>
              </td>

              <td><span class="muted-underline">#<%= p.orderNumber || p.receiptTimestamp %></span></td>
              <td><%= p.paymentMethod || 'N/A' %></td>
              <td><%= p.totalQuantity %></td>

              <td>$<%= Number(p.totalAmount).toFixed(2) %></td>
            </tr>
          <% }); %>
        </tbody>

      </table>

    <% } %>

  </div>
</body>
</html>
