<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Invoice</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/theme.css">
</head>
<body>
  <%- include('partials/header') %>

  <div class="container mt-4">
    <div class="page-hero mb-3">
      <div class="d-flex justify-content-between flex-wrap align-items-center">
        <div>
          <h2 class="page-title mb-1">Invoice</h2>
          <p class="text-muted mb-0">Invoice #: <strong><%= invoiceNumber || 'N/A' %></strong></p>
          <p class="text-muted mb-0">Order #: <strong><%= orderNumber || 'N/A' %></strong></p>
          <p class="text-muted mb-0">Date: <%= receiptDate instanceof Date ? receiptDate.toLocaleString() : receiptDate %></p>
          <p class="text-muted mb-0">Customer: <%= userInfo?.name %> (<%= userInfo?.email %>)</p>
        </div>
        <div class="text-end">
          <%
            const rawPayment = paymentMethod || '';
            const paymentKey = rawPayment.toLowerCase();
            let paymentLabel = 'N/A';
            let paymentBadgeClass = 'bg-secondary';
            if (paymentKey.includes('paypal')) {
              paymentLabel = 'PayPal';
              paymentBadgeClass = 'bg-primary';
            } else if (paymentKey.includes('stripe')) {
              paymentLabel = 'Stripe';
              paymentBadgeClass = 'bg-dark';
            } else if (paymentKey.includes('nets')) {
              paymentLabel = 'NETS QR';
              paymentBadgeClass = 'bg-info text-dark';
            } else if (paymentKey.includes('store credit')) {
              paymentLabel = 'Store Credit';
              paymentBadgeClass = 'bg-secondary';
            } else if (paymentKey.includes('cash')) {
              paymentLabel = 'COD';
              paymentBadgeClass = 'bg-secondary';
            } else if (rawPayment) {
              paymentLabel = rawPayment;
            }
          %>
          <p class="mb-1"><strong>Payment:</strong> <span class="badge <%= paymentBadgeClass %>"><%= paymentLabel %></span></p>
          <% 
            const statusClassMap = {
              'Processing': 'bg-warning text-dark',
              'Packing': 'bg-info text-dark',
              'Ready for Pickup': 'bg-primary',
              'Out for Delivery': 'bg-info text-dark',
              'Completed': 'bg-success',
              'Cancelled': 'bg-secondary',
              'Failed Payment': 'bg-danger',
              'Refund Requested': 'bg-warning text-dark',
              'Refund Rejected': 'bg-secondary',
              'Refunded': 'bg-dark'
            };
            const badgeClass = statusClassMap[status || 'Processing'] || 'bg-secondary';
          %>
          <span class="badge <%= badgeClass %>"><%= status || 'Processing' %></span>
        </div>
      </div>
    </div>

    <div class="table-responsive">
      <table class="table table-striped align-middle">
        <thead>
          <tr>
            <th>Product</th>
            <th class="text-end">Quantity</th>
            <th class="text-end">Price</th>
            <th class="text-end">Subtotal</th>
          </tr>
        </thead>
        <tbody>
          <% items.forEach(item => { %>
            <tr>
              <td>
                <div class="d-flex align-items-center gap-2">
                  <% if (item.image) { %>
                    <img src="/images/<%= item.image %>" alt="<%= item.productName %>" style="width:55px;height:55px;object-fit:cover;border-radius:10px;">
                  <% } else { %>
                    <div class="bg-light text-muted d-flex align-items-center justify-content-center" style="width:55px;height:55px;border-radius:10px;">No img</div>
                  <% } %>
                  <div>
                    <div class="fw-semibold"><%= item.productName %></div>
                    <div class="text-muted small">Category: <%= item.category || 'Other' %></div>
                  </div>
                </div>
              </td>
              <td class="text-end"><%= item.quantity %></td>
              <td class="text-end">$<%= Number(item.price).toFixed(2) %></td>
              <td class="text-end">$<%= Number(item.subtotal).toFixed(2) %></td>
            </tr>
          <% }); %>
        </tbody>
        <tfoot>
          <tr>
            <th colspan="3" class="text-end">Items</th>
            <th class="text-end"><%= totalItems || items.length %></th>
          </tr>
          <tr>
            <th colspan="3" class="text-end">Subtotal</th>
            <th class="text-end">$<%= Number(totalAmount).toFixed(2) %></th>
          </tr>
          <tr>
            <th colspan="3" class="text-end">Tax</th>
            <th class="text-end">$<%= Number(tax || 0).toFixed(2) %></th>
          </tr>
          <tr>
            <th colspan="3" class="text-end">Total</th>
            <th class="text-end">$<%= Number(totalAmount + (tax || 0)).toFixed(2) %></th>
          </tr>
        </tfoot>
      </table>
    </div>

    <% if (isAdmin && statuses) { %>
      <% const refundLocked = status === 'Refunded'; %>
      <form action="/admin/orders/<%= orderNumber %>/status" method="POST" class="mt-3 d-flex flex-wrap gap-2 align-items-center">
        <label for="status" class="form-label mb-0">Update Status:</label>
        <select id="status" name="status" class="form-select" style="max-width:220px;" <%= (statusLocked || refundLocked) ? 'disabled' : '' %>>
          <% statuses.forEach(st => { %>
            <option value="<%= st %>" <%= st === status ? 'selected' : '' %>><%= st %></option>
          <% }); %>
        </select>
        <button class="btn btn-primary" <%= (statusLocked || refundLocked) ? 'disabled' : '' %>>Save</button>
        <% if (statusLocked) { %>
          <span class="text-muted small">Locked because the account was deleted.</span>
        <% } else if (refundLocked) { %>
          <span class="text-muted small">Locked because this order is refunded.</span>
        <% } %>
      </form>
      <% const paymentMethodLower = (paymentMethod || '').toLowerCase(); %>
      <% const isPaypal = paymentMethodLower.includes('paypal'); %>
      <% const isStripe = paymentMethodLower.includes('stripe'); %>
      <% const isNets = paymentMethodLower.includes('nets'); %>
      <% const isStoreCredit = paymentMethodLower.includes('store credit'); %>
      <% if (!statusLocked && (isPaypal || isStripe || isNets || isStoreCredit) && status === 'Refund Requested') { %>
        <% const refundLabel = isStripe ? 'Stripe' : isPaypal ? 'PayPal' : isNets ? 'NETS QR' : 'Store Credit'; %>
        <div class="mt-3 d-flex flex-wrap gap-2">
          <form action="/admin/orders/<%= orderNumber %>/refund" method="POST">
            <button class="btn btn-danger">Approve Refund (<%= refundLabel %>)</button>
          </form>
          <form action="/admin/orders/<%= orderNumber %>/refund-reject" method="POST">
            <button class="btn btn-outline-secondary">Reject Refund</button>
          </form>
        </div>
      <% } %>
    <% } %>

    <a href="<%= isAdmin ? '/inventory' : '/my-purchases' %>" class="btn btn-secondary mt-3">
      <%= isAdmin ? 'Back to Inventory' : 'Back to My Purchases' %>
    </a>
    <button class="btn btn-outline-primary mt-3 ms-2" onclick="window.print()">Print</button>
  </div>
</body>
</html>
